{
  "manifest_version": 3,
  "name": "FocusShield",
  "version": "1.0",
  "description": "Enhances productivity by limiting access to distracting websites.",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "scripting",
    "history", // Add this line to include the 'history' permission
    "idle" // Add this line to include the 'idle' permission
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "FocusShield"
  }
}